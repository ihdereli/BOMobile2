<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BOMobile2.Camera">
    <ContentPage.Content>
        <ScrollView Orientation = "Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="50">
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                <Image x:Name="PhotoImage" />
                <Button x:Name="CameraButton" Text="From Camera" />
                <Button x:Name="DeviceButton" Text="From Gallery" />
                <Button x:Name="SendButton" Text="Send Image" IsEnabled="False" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>