             xmlns:t="clr-namespace:Extensions" 
             x:Class="BOMobile2.VerifyActivation">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="labelActivationConfirm" Text="{t:Translate Key=58}" />
            <Entry x:Name="entryActivationConfirm" Text="" 
