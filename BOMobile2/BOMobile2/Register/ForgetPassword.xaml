<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:t="clr-namespace:Extensions" 
            x:Class="BOMobile2.ForgetPassword" 
            Icon="letbit.png" 
            Title="LETBIT">
    <ContentPage Title="Email">
        <StackLayout>
            <Label x:Name="labelEmail" Text="{t:Translate Key=60}" />
            <Entry x:Name="entryEmail" Text="" 
                Keyboard="Text" 
                Placeholder="{t:Translate Key=31}" 
                VerticalOptions="Start" 
                HorizontalOptions="Fill" />
            <Button x:Name="buttonSendEmail" Text="{t:Translate Key=73}" Clicked="buttonSendEmail_Clicked"></Button>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="SMS">
        <StackLayout>
            <Label x:Name="labelSMS" Text="{t:Translate Key=61}" />
            <Entry x:Name="entrySMSConfirm" Text="" 
                Keyboard="Telephone" 
                Placeholder="{t:Translate Key=46}" 
                VerticalOptions="Start" 
                HorizontalOptions="Fill" />
            <Button x:Name="buttonSendSMS" Text="{t:Translate Key=61}" Clicked="buttonSendSMS_Clicked"></Button>
        </StackLayout>
    </ContentPage>
</TabbedPage>